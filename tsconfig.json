{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [
      { "name": "next" }
    ],
    "outDir": "dist"
  },
  "include": [
    "server.ts",
    "src/**/*",
    "next-env.d.ts",
    "types/**/*.d.ts",
    "src/seed/seed-database.ts"
  ],
  "exclude": ["node_modules"]
}
