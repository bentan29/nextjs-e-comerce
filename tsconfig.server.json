{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "noEmit": false,
      "module": "CommonJS",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2022",
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": false
    },
    "include": ["server.ts"],
    "exclude": ["node_modules", ".next", "dist"]
  }
  